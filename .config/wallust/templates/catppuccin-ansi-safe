# Colores ANSI 0-7 (Normal)
\033]4;0;{{colors.crust.hex}}\033\      # Black (0) -> crust
\033]4;1;{{colors.red.hex}}\033\        # Red (1) -> red
\033]4;2;{{colors.green.hex}}\033\      # Green (2) -> green
\033]4;3;{{colors.yellow.hex}}\033\     # Yellow (3) -> yellow
\033]4;4;{{colors.blue.hex}}\033\       # Blue (4) -> blue
\033]4;5;{{colors.pink.hex}}\033\       # Magenta (5) -> pink
\033]4;6;{{colors.teal.hex}}\033\       # Cyan (6) -> teal
\033]4;7;{{colors.text.hex}}\033\       # White (7) -> text

# Colores ANSI 8-15 (Bright)
